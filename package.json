{
  "name": "word-guesser-multiplayer",
  "version": "1.0.0",
  "description": "A multiplayer word guessing game",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "convert-words": "node server/data/convertWords.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mongoose": "^7.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["game", "multiplayer", "word-guessing"],
  "author": "jdcb4",
  "license": "MIT"
}
